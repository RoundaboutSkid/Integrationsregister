{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/async_flow.v1.json",
  "title": "Integrationsbeskrivning Asynkront flöde",
  "type": "object",
  "required": ["template", "metadata_version", "integration", "systems", "interfaces"],
  "properties": {
    "template": {"const": "Integrationsbeskrivning Asynkront flöde"},
    "metadata_version": {"const": "1.0"},
    "integration": {
      "type": "object",
      "required": ["id", "title", "pattern", "interaction_type", "flow_variant"],
      "properties": {
        "id": {"type": "string"},
        "title": {"type": "string"},
        "pattern": {"const": "async_flow"},
        "interaction_type": {"enum": ["One-way", "Publish-Subscribe"]},
        "flow_variant": {"enum": ["Asynkront flöde", "Asynkront flöde med bearbetning"]},
        "information_object": {"type": "string"},
        "information_classification": {"type": "string"},
        "diagram_ref": {"type": "string"},
        "refs": {"type": "object"}
      }
    },
    "systems": {"type": "object", "required": ["app1", "rtjp", "app2"]},
    "interfaces": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "object",
        "required": [
          "id",
          "leg",
          "connection_pattern",
          "service_roles",
          "data_flow",
          "security",
          "endpoint"
        ],
        "properties": {
          "id": {"type": "string"},
          "leg": {"enum": ["app_to_rtjp", "rtjp_to_app"]},
          "connection_pattern": {
            "enum": [
              "Ta emot från HTTP-klient i asynkront flöde",
              "Ta emot från avsändare HL7v2 i asynkront flöde",
              "Ta emot från JMS-klient i asynkront flöde",
              "Hämta från FTP-server i asynkront flöde",
              "Hämta från SFTP-server i asynkront flöde",
              "Hämta från Fileshare i asynkront flöde",
              "Hämta från HTTP-server i asynkront flöde",
              "Lämna till FTP-server i asynkront flöde",
              "Lämna till SFTP-server i asynkront flöde",
              "Lämna till Fileshare i asynkront flöde",
              "Lämna till HTTP-server i asynkront flöde",
              "Lämna till mottagare HL7v2 i asynkront flöde",
              "Lämna till epostmottagare i asynkront flöde",
              "Lämna till JMS-klient i asynkront flöde"
            ]
          },
          "service_roles": {
            "type": "object",
            "required": ["producer_system", "consumer_systems"],
            "properties": {
              "producer_system": {"type": "string"},
              "consumer_systems": {"type": "array", "items": {"type": "string"}}
            }
          },
          "data_flow": {
            "type": "object",
            "required": ["direction", "protocol", "format"],
            "properties": {
              "direction": {"enum": ["push", "pull", "publish", "subscribe"]},
              "protocol": {"enum": ["http", "https", "ftp", "sftp", "file", "jms", "mllp", "smtp"]},
              "endpoint": {"type": "string"},
              "format": {"type": "string"}
            }
          },
          "data_roles": {
            "type": "object",
            "properties": {
              "publisher_system": {"type": "string"},
              "subscriber_systems": {"type": "array", "items": {"type": "string"}},
              "source_system": {"type": "string"},
              "target_system": {"type": "string"}
            },
            "additionalProperties": false
          },
          "security": {
            "type": "object",
            "required": ["encryption", "server_identification", "access_control"],
            "properties": {
              "encryption": {"enum": ["Okrypterad kanal", "Krypterad kanal med publik nyckel"]},
              "server_identification": {"enum": ["Anonym server", "Serveridentifiering med publik nyckel"]},
              "access_control": {"enum": ["Username/Password", "API-nyckel", "Klientcertifikat", "SSH Public Key Authentication"]}
            }
          },
          "interface": {"type": "object"},
          "realization": {"type": "object"},
          "endpoint": {
            "type": "object",
            "properties": {
              "protocol": {"enum": ["http", "https", "ftp", "sftp", "file", "jms", "mllp", "smtp"]},
              "url": {"type": "string"},
              "host": {"type": "string"},
              "port": {"type": "integer"},
              "path": {"type": "string"},
              "method": {"type": "string"},
              "destination_type": {"enum": ["queue", "topic", null]}
            }
          },
          "channel": {
            "type": "object",
            "properties": {
              "type": {"enum": ["jms", "fileshare", "smtp", "mllp"]},
              "name": {"type": "string"}
            }
          }
        },
        "additionalProperties": true
      }
    },
    "processing_steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["order", "description"],
        "properties": {
          "order": {"type": "integer", "minimum": 1},
          "description": {"type": "string"},
          "spec_ref": {"type": "string"},
          "realization_component": {"type": "string"}
        }
      }
    }
  },
  "additionalProperties": true
}